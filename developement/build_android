paths=( "soomla-native/projects/cocos2dx-android-profile" "submodules/android-profile/social-providers/android-profile-facebook")
build=../build/android

rm -rf $build
mkdir -p $build

# handle special case of build_all location for android-profile
cd submodules/android-profile/SoomlaAndroidProfile
./build_all
cd -
cp -RL submodules/android-profile/build/* $build/

for path in "${paths[@]}"
do
  cd $path
  ./build_all
  cd -
  cp -RL $path/build/* $build/
done
